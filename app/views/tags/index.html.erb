<h1>Tags</h1>

<% if @tags.empty? %>
  <p class="empty-list">
    There are no tags!
    <%= link_to "Add one now?", new_tag_path %>
  </p>
<% else %>

  <table class="table">
    <thead>
     <tr>
       <th scope="row">Name</th>
       <th>Tickets</th>
       <th colspan="2"></th>
     </tr>
   </thead>
   
   <tbody>
     <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%= link_to tag.tickets.size, tickets_path(tag_id: tag.id) %></td>
        <td class="shrink">
          <%= link_to 'Edit', edit_tag_path(tag) %>
          or 
          <%= link_to 'Destroy', tag, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
       </tr>
     <% end %>
   </tbody>
  </table>
  
  <br>
  
  <%= link_to 'New Tag', new_tag_path %>
<% end %>