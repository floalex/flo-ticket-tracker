<h1>Tags</h1>

<table class="table">
  <thead>
   <tr>
     <th scope="row">Name</th>
     <th>Tickets</th>
     <th colspan="2"></th>
   </tr>
 </thead>
 
 <tbody>
   <% @tags.each do |tag| %>
    <tr>
      <td><%= tag.name %></td>
      <td><%= tag.tickets.size %></td>
      <td class="shrink">
        <%= link_to 'Edit', edit_tag_path(tag) %>
        or 
        <%= link_to 'Destroy', tag, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
     </tr>
   <% end %>
 </tbody>
</table>

<br>

<%= link_to 'New Tag', new_tag_path %>