<% if obj.errors.any? %>
  <div class='row'>
    <div class='errors-danger col-sm-10'>
      <h5>You have the following <%= pluralize(obj.errors.count, 'error') %>: </h5>
        <ul>
          <% obj.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
    </div>
  </div>
<% end %>